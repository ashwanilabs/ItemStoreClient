<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>ItemStoreClientServiceImpl</servlet-name>
    <servlet-class>com.google.gwt.itemstoreclient.server.ItemStoreClientServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ItemStoreClientServiceImpl</servlet-name>
    <url-pattern>/itemstoreclient/itemstoreService</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>ItemStoreClient.html</welcome-file>
  </welcome-file-list>

</web-app>
